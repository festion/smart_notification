{
  "name": "Smart Notification Router",
  "version": "1.0.26",
  "slug": "smart_notification_router",
  "description": "Flexible notification routing with severity, audience, and deduplication",
  "url": "https://github.com/festion/smart_notification",
  "arch": ["amd64", "armv7", "aarch64"],
  "startup": "application",
  "boot": "auto",
  "init": false,
  "hassio_api": true,
  "hassio_role": "default",
  "homeassistant_api": true,
  "ingress": true,
  "ingress_port": 8080,
  "panel_icon": "mdi:message-alert",
  "panel_title": "Notification Router",
  "map": ["config:rw"],
  "options": {
    "deduplication_ttl": 300,
    "audiences": {
      "mobile": {
        "services": ["notify.mobile_app_pixel_9_pro_xl"],
        "min_severity": "high"
      },
      "dashboard": {
        "services": ["persistent_notification.create"],
        "min_severity": "low"
      }
    },
    "severity_levels": ["low", "medium", "high", "emergency"]
  },
  "schema": {
    "deduplication_ttl": "int(60,3600)",
    "audiences": "match(.*)",
    "severity_levels": ["str"]
  }
}
