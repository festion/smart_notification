{
  "name": "Smart Notification Router",
  "version": "0.1.0",
  "slug": "smart_notification_router",
  "description": "Routes Home Assistant notifications by severity and audience.",
  "startup": "application",
  "boot": "auto",
  "ingress": true,
  "ingress_port": 8080,
  "panel_icon": "mdi:message-alert",
  "panel_title": "Notification Router",
  "arch": ["amd64", "armv7", "aarch64"],
  "map": ["config:rw"],
  "options": {
    "audiences": {
      "admin": {
        "services": ["notify.mobile_app_pixel_9_pro_xl"],
        "min_severity": "medium"
      }
    }
  },
  "schema": {
    "audiences": "match(^\\{.*\\}$)"
  },
  "image": "ghcr.io/festion/smart_notification_router-{arch}"
}
