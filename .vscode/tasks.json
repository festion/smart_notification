{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "Start Home Assistant",
      "type": "shell",
      "command": "supervisor_run",
      "group": {
        "kind": "test",
        "isDefault": true
      },
      "presentation": {
        "reveal": "always",
        "panel": "new"
      },
      "problemMatcher": []
    },
    {
      "label": "Build Add-on",
      "type": "shell",
      "command": "cd ${workspaceFolder} && docker run --rm -v ${workspaceFolder}:/data -v /var/run/docker.sock:/var/run/docker.sock homeassistant/amd64-builder -t /data --all --test",
      "group": {
        "kind": "build",
        "isDefault": true
      },
      "presentation": {
        "reveal": "always",
        "panel": "new"
      },
      "problemMatcher": []
    }
  ]
}
